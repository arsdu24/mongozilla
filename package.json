{
  "name": "@mongozilla/mongozilla",
  "version": "0.1.0",
  "description": "MongoDb ORM",
  "main": "index.js",
  "files": [
    "dist",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "start": "ts-node ./example/main.ts",
    "format": "prettier --write \"(src|test)/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "author": "arsdu24",
  "license": "ISC",
  "peerDependencies": {
    "reflect-metadata": "^0.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.9.5",
    "mongodb": "^3.5.5"
  },
  "dependencies": {
    "lodash": "^4.17",
    "utility-types": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.149",
    "@types/mongodb": "^3.5.5",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^25.3.0",
    "mongodb": "^3.5.5",
    "prettier": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.9.5",
    "utility-types": "^3.10.0"
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.spec.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arsdu24/mongozilla.git"
  },
  "keywords": [
    "mongodb",
    "orm",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/arsdu24/mongozilla/issues"
  },
  "homepage": "https://github.com/arsdu24/mongozilla#readme"
}
